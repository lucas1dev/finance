{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": [
      "controllers",
      "models", 
      "middlewares",
      "routes",
      "utils",
      "services",
      "app.js",
      "server.js",
      "setup-database.js",
      "run-integration-tests.js"
    ],
    "includePattern": ".+\\.js$",
    "excludePattern": "(node_modules/|__tests__/|coverage/|migrations/)"
  },
  "plugins": [],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    },
    "path": "node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "title": "Documentação da API Finance",
      "subtitle": "Sistema Financeiro Completo - Backend Node.js/Express",
      "menu": [
        {
          "title": "GitHub",
          "link": "https://github.com/seu-usuario/finance"
        },
        {
          "title": "Testes",
          "link": "./TESTING_GUIDE.md"
        },
        {
          "title": "Status dos Testes",
          "link": "./TEST_STATUS_REPORT.md"
        }
      ],
      "search": true,
      "nav_links": [
        {
          "label": "Controllers",
          "href": "https://github.com/seu-usuario/finance/tree/main/server/controllers"
        },
        {
          "label": "Models", 
          "href": "https://github.com/seu-usuario/finance/tree/main/server/models"
        },
        {
          "label": "Routes",
          "href": "https://github.com/seu-usuario/finance/tree/main/server/routes"
        },
        {
          "label": "Middlewares",
          "href": "https://github.com/seu-usuario/finance/tree/main/server/middlewares"
        },
        {
          "label": "Utils",
          "href": "https://github.com/seu-usuario/finance/tree/main/server/utils"
        },
        {
          "label": "Services",
          "href": "https://github.com/seu-usuario/finance/tree/main/server/services"
        }
      ],
      "footer": "<p>Documentação gerada automaticamente com JSDoc. Última atualização: 20/06/2025</p>"
    }
  },
  "opts": {
    "destination": "./docs/jsdoc",
    "recurse": true,
    "readme": "./README.md",
    "template": "node_modules/clean-jsdoc-theme",
    "verbose": true
  }
} 