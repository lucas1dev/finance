{
  "name": "finance-server",
  "version": "1.0.0",
  "description": "Backend do sistema financeiro",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "prod:pm2": "pm2 start ecosystem.config.js",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "seed": "sequelize-cli db:seed:all",
    "seed:undo": "sequelize-cli db:seed:undo:all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "npx http-server docs/jsdoc -p 8080 -o",
    "docs:watch": "jsdoc -c jsdoc.json --watch",
    "audit": "npm audit",
    "outdated": "npm outdated",
    "clean": "rm -rf node_modules && npm install",
    "build": "echo 'Build completed'",
    "postinstall": "echo 'Post-install completed'"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.2.0",
    "pg": "^8.16.0",
    "sequelize": "^6.31.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "clean-jsdoc-theme": "^4.3.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jsdoc": "^4.0.4",
    "nodemon": "^2.0.22",
    "sequelize-cli": "^6.6.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
